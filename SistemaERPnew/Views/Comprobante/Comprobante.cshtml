@using Datos;
@using Entidad;
@using Entidad.Estados;
@{
    ViewBag.Title = "Comprobante";
    Layout = "~/Views/Shared/_LayoutComprobante.cshtml";
    List<Cuenta> cuentasDetalle = ViewBag.CuentaDetalle;
    List<EmpresaMoneda> empresaMonedas = ViewBag.EmpresaMonedas;

