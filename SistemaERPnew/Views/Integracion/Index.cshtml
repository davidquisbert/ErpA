        function redireccionar(url) {
            window.location = url;
        }

        function Registro() {

            let radio = $('input[name="flexRadioDefault"]:checked').val();
            var cuentacaja = $("#select_Categoriacaja").val();
            var cuentacreditofiscal = $("#select_Categoriacreditofiscal").val();
            var cuentadebitofiscal = $("#select_Categoriadebitofiscal").val();
            var cuentacompras = $("#select_Categoriacompras").val();
            var cuentaventas = $("#select_Categoriaventas").val();
            var cuentait = $("#select_Categoriait").val();
            var cuentaitporpagar = $("#select_Categoriaitporpagar").val();
            if (cuentacaja == -1) {
                return MostrarMensaje("Seleccione una cuenta para Caja");
            }  if (cuentacreditofiscal == -1) {
                return MostrarMensaje("Seleccione una cuenta para Credito Fiscal");
            }  if (cuentadebitofiscal == -1) {
                return MostrarMensaje("Seleccione una cuenta para Debito Fiscal");
            }  if (cuentacompras == -1) {
                return MostrarMensaje("Seleccione una cuenta para Compras");
            }  if (cuentaventas == -1) {
                return MostrarMensaje("Seleccione una cuenta para Ventas");
            }  if (cuentait == -1) {
                return MostrarMensaje("Seleccione una cuenta para IT");
            } if (cuentaitporpagar == -1) {
                return MostrarMensaje("Seleccione una cuenta para IT x Pagar");
            }

                $.ajax({
                    url: "@Url.Action("Registro", "Integracion")",
                    cache: false,
                            type: "POST",
                            dataType: "script",
                            data: {
                                integracionselect: radio,
                                idCaja: cuentacaja,
                                idCreditoFiscal: cuentacreditofiscal,
                                idDebitoFiscal: cuentadebitofiscal,
                                idCompras: cuentacompras,
                                idVentas: cuentaventas,
                                idIt: cuentait,
                                idItPorPagar: cuentaitporpagar
                    }, success: function () {
                                ObtenerIntegracion();
                    }
                });

         }

        function ObtenerIntegracion() {

            $.ajax({
                url: "@Url.Action("ObtenerIntegracion", "Integracion")",
                cache: false,
                        type: "POST",
                        dataType: "json",
                data: {

                }, success: function (result) {

                            if (result.integracion != null) {
                                if (result.integracion == 0) {
                                    document.getElementById("flexRadioDefault2").checked = true;
                                }
                                if (result.integracion == 1) {
                                    document.getElementById("flexRadioDefault1").checked = true;
                                }
                                        
                            }
                            //  $("#select_MonedaPrincipal").val(result.Niveles).trigger('change');
                            if (result.idcaja != null) {
                                $("#select_Categoriacaja").val(result.idcaja).trigger('change');
                            }
                            if (result.idcreditofiscal != null) {
                                $("#select_Categoriacreditofiscal").val(result.idcreditofiscal).trigger('change');
                            }
                            if (result.iddebitofiscal != null) {
                                $("#select_Categoriadebitofiscal").val(result.iddebitofiscal).trigger('change');
                            }
                            if (result.idcompra != null) {
                                $("#select_Categoriacompras").val(result.idcompra).trigger('change');
                            }
                            if (result.idventa != null) {
                                $("#select_Categoriaventas").val(result.idventa).trigger('change');
                            }
                            if (result.idit != null) {
                                $("#select_Categoriait").val(result.idit).trigger('change');
                            }
                            if (result.iditporpagar != null) {
                                $("#select_Categoriaitporpagar").val(result.iditporpagar).trigger('change');
                            }
                }

             });
        }

        function MostrarMensaje(msj) {
