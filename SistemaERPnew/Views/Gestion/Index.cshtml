        $(document).ready(function () {
            TableDatatablesRowreorder.init();

            $("#inicio").datepicker();
            $("#fin").datepicker();


        });

        function redireccionar(url) {
            window.location = url;
        }

        function Ingresar(Id) {

            $.ajax({
                    url: "@Url.Action("IngresarGestion", "Gestion")",
                    cache: false,
                            type: "POST",
                            dataType: "script",
                            data: {
                                id: Id
                            }

            });
        }


        function RegistroGestion() {

            console.log($("#itIdGestion").val());

            if ($("#itIdGestion").val().length === 0) {
                $.ajax({
                    url: "@Url.Action("Registro", "Gestion")",
                    cache: false,
                            type: "POST",
                            dataType: "script",
                            data: {

                               nombre: $("#itNombre").val(),
                               fechainicio: $("#inicio").val(),
                               fechafin:$("#fin").val()



                    }, success: function () {

                    }
                });



            } else {


                 $.ajax({
                    url: "@Url.Action("Editar", "Gestion")",
                    cache: false,
                            type: "POST",
                            dataType: "script",
                            data: {
                               id:  $("#itIdGestion").val(),
                               nombre: $("#itNombre").val(),
                               fechainicio: $("#inicio").val(),
                               fechafin:$("#fin").val()


                    }, success: function () {


                    }
                });

            }

        }

         var Id = null;

       function AbrirModalEliminar(id,nombre) {

            Id = id;
           // $("#mensaje").hide();
                if (Id == null) {
                       return MostrarMensaje("Debe seleccionar la gestion");
                }

            var mesjModalEliminar = "¿Esta seguro que deseas eliminar la gestion " + nombre + " ?";
             $("#texto").html(mesjModalEliminar);
            $("#modalEliminar").modal('show');

            console.log(id)


        }



         function Eliminar() {

                if ( Id== null) {
                       return MostrarMensaje("Debe seleccionar la gestion");
                }

                $.ajax({
                        url: "@Url.Action("Eliminar", "Gestion")",
                        cache: false,
                                type: "POST",
                                dataType: "script",
                    data: {
                        id: Id
                    }

                });
          }

         function ValidarGestion() {


                $.ajax({
                        url: "@Url.Action("ValidarGestionAbierta", "Gestion")",
                        cache: false,
                                type: "POST",
                                dataType: "script",
                    data: {

                    }

                });
          }


        function AbrirModalRegistro() {
           // $("#mensaje").hide();
            $("#modalEmpresa").modal('show');
            $("#tituloEmpresa").html("Registrar Gestion");
            $("#itIdGestion").val("");
            $("#itNombre").val("");
             $("#inicio").val("");
            $("#fin").val("");
        }

        function AbrirModalEditar(id,nombre,fechainicio,fechafin) {
           // $("#mensaje").hide();
            $("#modalEmpresa").modal('show');
            $("#tituloEmpresa").html("Modificar Gestion");
            $("#itIdGestion").val(id);
            $("#itNombre").val(nombre);
            $("#inicio").val(fechainicio);
            $("#fin").val(fechafin);
        }

        function MostrarMensaje(msj) {
                $("#modalEliminar").modal('hide');


                 $(document).Toasts('create', {
                        class: ' bg-danger',
                        title: "Alerta",
                        autohide: true,
                        delay: 10000,
                        body: msj
                    });
        }


         function MostrarMensajeExito(msj) {

                listar();
                var msjbody = "Se Modificaron los Datos Exitosamente";
                if ($("#itIdGestion").val().length === 0) {
                    msjbody = "Se Registraron los Datos Exitosamente";
                }

                $(document).Toasts('create', {
                    class: 'bg-success',
                    title: msj,
                    autohide: true,
                    delay: 10000,
                    body: msjbody
                });
                $("#itIdGestion").val("");
                $("#itNombre").val("");

                $("#modalEmpresa").modal('hide');
               // console.log(msj);
        }


        function MostrarMensajeEliminacion(msj) {

                listar();
                var msjbody = "Se elimino la gestion";


                $(document).Toasts('create', {
                    class: 'bg-success',
                    title: msj,
                    autohide: true,
                    delay: 10000,
                    body: msjbody
                });

                $("#modalEliminar").modal('hide');
               // console.log(msj);
        }

        function listar()
        {
            $.ajax({
